                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4. Toughness test (Izod and Charpy Impact tests)"
                    android:id="@+id/textView317"
                    android:layout_gravity="left|center_horizontal"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5. Hardness test (Brinell and Rockwell Hardness tests)"
                    android:id="@+id/textView319"
                    android:layout_gravity="left|center_horizontal"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6. Spring test â€“ Open and closed coiled springs (Determination of spring stiffness and modulus of rigidity)"
