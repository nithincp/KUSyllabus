<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="boots.com.fan.MainActivity"
    android:background="@color/abc_search_url_text_normal"
    android:weightSum="1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="123dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="B.TECH DEGREE COURSE"
        android:id="@+id/textView"
        android:textColor="@android:color/black"
        android:gravity="fill_vertical|center_horizontal"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/abc_action_button_min_width_overflow_material"
        android:textStyle="bold"
        android:layout_weight="0.17" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="UNIVERSITY OF KERALA"
        android:id="@+id/textView1803"
        android:textColor="@android:color/black"
        android:gravity="fill_vertical|center_horizontal"
        android:textSize="@dimen/abc_action_button_min_width_overflow_material"
        android:textStyle="bold"
        android:layout_weight="0.26" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:text="2013 Scheme"
        android:id="@+id/button"
        android:background="@drawable/shape"
        android:layout_gravity="center_horizontal"


        />


</LinearLayout>
