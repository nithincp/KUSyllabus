                        android:textSize="@dimen/abc_dialog_padding_material" />

                    <TextView
                        android:id="@+id/textView1176"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1. Oza H. P. and G. H. Oza, Dock and Harbour Engineering, 6/e, Charotar Books, Anand., 2011."
