                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. Todaro M., Economic Development, Addison Wesley Longman Ltd., 1994."
                    android:id="@+id/textView70"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. Sharma M. K., Business Environment in India, Commonwealth Publishers, 2011."
                    android:id="@+id/textView71"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4. Mithani D.M., Money, Banking, International Trade and Public Finance, Himalaya Publishing House, New Delhi, 2012."
                    android:id="@+id/textView72"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold" />

